# i3blocks config file

command=/usr/libexec/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none
color=#DCDCCC

[uname]
command=uname -sr
interval=once

[org]
command=$HOME/.config/i3blocks/git_status
GIT_REPO=~/org
GIT_UPSTREAM=origin/master
interval=300
markup=pango

[.emacs.d]
command=$HOME/.config/i3blocks/git_status
GIT_REPO=~/.emacs.d
GIT_UPSTREAM=origin/master
interval=300
markup=pango

[dotfile]
command=$HOME/.config/i3blocks/git_status
GIT_REPO=~/dotfiles
GIT_UPSTREAM=github/master
interval=300
markup=pango

[pulse_control]
command=$HOME/.config/i3blocks/pulse_control
interval=once
signal=2
markup=pango

[disk]
command=$HOME/.config/i3blocks/display_disk_status
interval=once
signal=3
markup=pango

[bandwidth]
command=$HOME/.config/i3blocks/bandwidth
interval=5
markup=pango

[cpu_usage]
command=$HOME/.config/i3blocks/cpu_usage
interval=persist
markup=pango

[load_average]
interval=10

[memory]
command=$HOME/.config/i3blocks/memory
interval=persist
markup=pango

[cpu_clock]
command=$HOME/.config/i3blocks/cpu_clock
interval=persist

[temperature]
command=$HOME/.config/i3blocks/temperature --chip acpitz-acpi-0 -w 30 -c 40
interval=10

[temperature]
command=$HOME/.config/i3blocks/temperature --chip coretemp-isa-0000 -w 45 -c 70
interval=10

[time]
command=date '+%a %Y-%m-%d %H:%M:%S %Z'
interval=1
